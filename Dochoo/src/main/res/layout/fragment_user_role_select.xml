<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.chc.dochoo.userlogin.UserRoleSelectActivity$PlaceholderFragment">


    <com.chc.views.TypefacedTextView
        app:typeface="opensans.ttf"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role_select_step_1"
        android:id="@+id/textView"
        android:layout_margin="4dp"
        android:textColor="@color/default_dochoo_orange"
        android:textSize="@dimen/default_text_size_large"/>

    <com.chc.views.TypefacedTextView
        app:typeface="opensans.ttf"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role_select_choose"
        android:textSize="@dimen/default_text_size_medium"
        android:id="@+id/textView2"
        android:layout_margin="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:id="@+id/wrapper_role_1">

        <com.makeramen.RoundedImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/doctor_collabrator_icon_radius"
            android:layout_height="@dimen/doctor_collabrator_icon_radius"
            android:src="@drawable/provider"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/doctor_collabrator_icon_radius"
            app:border_width="@dimen/rounded_img_border_width"
            app:border_color="@color/default_dochoo_orange"
            app:round_background="true"
            android:padding="4dp" />

        <com.chc.views.TypefacedTextView
            app:typeface="opensans.ttf"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/role_provider"
            android:textSize="@dimen/default_text_size_medium"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="@color/default_dochoo_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/check1"
            android:src="@drawable/button_check_pressed" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:id="@+id/wrapper_role_2">

        <com.makeramen.RoundedImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/doctor_collabrator_icon_radius"
            android:layout_height="@dimen/doctor_collabrator_icon_radius"
            android:src="@drawable/group"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/doctor_collabrator_icon_radius"
            app:border_width="@dimen/rounded_img_border_width"
            app:border_color="@color/default_dochoo_orange"
            app:round_background="true"
            android:padding="4dp" />

        <com.chc.views.TypefacedTextView
            app:typeface="opensans.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/role_group"
            android:textSize="@dimen/default_text_size_medium"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="@color/default_dochoo_orange"/>
        <ImageView
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:id="@+id/check2"
            android:src="@drawable/button_check_pressed" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:id="@+id/wrapper_role_3">


        <com.makeramen.RoundedImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/doctor_collabrator_icon_radius"
            android:layout_height="@dimen/doctor_collabrator_icon_radius"
            android:src="@drawable/patient"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/doctor_collabrator_icon_radius"
            app:border_width="@dimen/rounded_img_border_width"
            app:border_color="@color/default_dochoo_orange"
            app:round_background="true"
            android:padding="4dp" />

        <com.chc.views.TypefacedTextView
            app:typeface="opensans.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/role_patient"
            android:textSize="@dimen/default_text_size_medium"
            android:layout_weight="1"
            android:padding="16dp"
            android:textColor="@color/default_dochoo_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/check3"
            android:src="@drawable/button_check_pressed" />


    </LinearLayout>

    <Button
        android:enabled="false"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/buttonSubmit"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg_selector"
        android:textColor="@color/white"
        android:layout_marginTop="48dp" />
</LinearLayout>
