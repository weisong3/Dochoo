<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/doctor_detail_standard_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
            android:id="@+id/address_item_officename"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/doctor_detail_inner_margin"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
            android:id="@+id/address_item_hours"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/doctor_detail_inner_margin"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/doctor_detail_inner_margin" >

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:text="@string/address"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:id="@+id/address_item_textview"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/center_inner_margin"
                android:text=">"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/center_inner_margin"
            android:layout_marginRight="@dimen/center_inner_margin"
            android:background="#ababab" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/doctor_detail_inner_margin" >

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:text="@string/phone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:id="@+id/address_phone_textview"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.chc.views.TypefacedTextView app:typeface="opensans.ttf"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/center_inner_margin"
                android:text=">"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
