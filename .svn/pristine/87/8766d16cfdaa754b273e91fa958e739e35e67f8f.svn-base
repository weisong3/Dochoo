<ScrollView
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.chc.dochoo.userlogin.RegisterInfoActivity$PlaceholderFragment"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <com.chc.views.TypefacedTextView
            app:typeface="opensans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_step_2"
            android:id="@+id/textView"
            android:layout_margin="4dp"
            android:textColor="@color/default_dochoo_orange"
            android:textSize="@dimen/default_text_size_large" />

        <com.chc.views.TypefacedTextView
            app:typeface="opensans.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_message"
            android:textSize="@dimen/default_text_size_medium"
            android:id="@+id/textView2"
            android:layout_margin="8dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/container"
            android:layout_weight="1">

        </FrameLayout>

    </LinearLayout>
</ScrollView>